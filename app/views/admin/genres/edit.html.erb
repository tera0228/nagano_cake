<div class="container">

  <div class="row mb-3">
    <h2 class="mt-3">ジャンル編集</h2>
  </div>

  <div class="row md-12">
    <%= form_for(@genre, url: admin_genre_path(@genre),html: {method: "patch"}) do |genre| %>
    <div class="form-group row">
      <label class="col-md-4 col-form-label">ジャンル名</label>
      <%= genre.text_field :name, class: "form-control col-sm-4" %>
      <div class="col-sm-4">
        <%= genre.submit '変更を保存', class: "btn btn-success d-flex justify-content-center" %>
      </div>
    </div>
    <% end %>
  </div>
</div>