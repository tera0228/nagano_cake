<div class="container">
  <div class="row">
    <div class="col">
      <h2>ジャンル一覧・追加</h2>

      <%= form_for(@genre, url: admin_genres_path) do |genre| %>
      <div class="form-group">
        <label>ジャンル名</label>
        <%= genre.text_field :name %>
        <%= genre.submit "新規登録", class: "form_control genre-new" %>
      </div>
      <% end %>

      <table class="table table-sm">
        <thead>
          <tr class="table-warning">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>