<div class="container">
  <div class="row mb-3">
    <h2 class="mt-3">ジャンル一覧・追加</h2>
  </div>

  <div class="row md-12">
    <%= form_for(@genre, url: admin_genres_path) do |genre| %>
    <div class="form-group row">
      <label class="col-md-4 col-form-label">ジャンル名</label>
        <%= genre.text_field :name, class: "form-control col-sm-4" %>
      <div class="col-sm-4">
        <%= genre.submit "新規登録", class: "btn btn-success d-flex justify-content-center" %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row">
    <table class="table col-md-4">
      <thead>
        <tr class="table-warning">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>