<div class="container">
  <div class=="row">
    <div class="col mx-auto">

      <h2 class="mt-3">商品一覧</h2>

      <!-- 商品新規登録ボタン -->
      <%= link_to "＋", new_admin_item_path, class: "btn btn-secondary" %>

      <table class="table mt-3">
        <thead>
          <tr class="table-warning">
            <th scope="col">商品ID</th>
            <th scope="col">商品名</th>
            <th scope="col">税抜価格</th>
            <th scope="col">ジャンル</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == true %>
                <p class="text-success font-weight-bold">販売中</p>
              <% else %>
                <p class="text-black-50 font-weight-bold">販売停止中</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>