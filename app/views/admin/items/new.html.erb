<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="mt-3 mb-5">商品新規登録</h2>

      <%= form_for(@item, url: admin_items_path) do |item| %>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">商品画像</label>
            <div class="col-sm-10">
              <%= item.file_field :item_image, class: "form-control-file item_image" %>
            </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label">商品名</label>
          <div class="col-sm-10">
            <%= item.text_field :name, class: "form-control item_name" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label">商品説明</label>
          <div class="col-sm-10">
            <%= item.text_area  :introduction, class: "form-control item_introduction" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label">ジャンル</label>
          <div class="col-sm-10">
            <%= item.collection_select(:genre_id, Genre.all, :id, :name,{prompt: "--選択してください--"}) %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 col-form-label">税抜価格</label>
          <%= item.text_field :price, class: "form-control" %>円
        </div>

        <div class="form-check row">
          <label class="col-sm-2 col-form-label">販売ステータス</label>
            <div class="col-sm-10">
              <%= item.radio_button :is_active, true %>
              <%= item.label :is_active, "販売中" %>
              <%= item.radio_button :is_active, false %>
              <%= item.label :is_active, "販売停止中" %>
            </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-10">
            <%= item.submit "新規登録", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>