<div class="container">
  <h2 class="mt-3">商品詳細</h2>

  <div class="row mt-5">
    <div class="col-md-4">
      <%= image_tag @item.item_image, size: "350x250" %>
    </div>

    <div class="col-md-8">
      <table class="table table-borderless">
        <tr>
          <th class="col-sm-4">商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th class="col-sm-4">商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th class="col-sm-4">ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th class="col-sm-4">税込価格<br>（税抜価格）</th>
          <td><%= (@item.price * 1.1).to_i %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <th class="col-sm-4">販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
              <p class="text-success font-weight-bold">販売中</p>
            <% else %>
              <p class="text-black-50 font-weight-bold">販売停止中</p>
            <% end %>
        </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %>
  </div>
</div>