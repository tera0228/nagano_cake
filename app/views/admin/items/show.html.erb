<h2>商品編集</h2>

<div>
  <%= image_tag @item.item_image, size: "300x217" %>
</div>

<div>
  <table>
    <tr>
      <th>商品名</th>
      <th><%= @item.name %></th>
    </tr>
    <tr>
      <th>商品説明</th>
      <th><%= @item.introduction %></th>
    </tr>
    <tr>
      <th>ジャンル</th>
      <th><%= @item.genre.name %></th>
    </tr>
    <tr>
      <th>税込価格<br>（税抜価格）</th>
      <th><%= (@item.price * 1.1).to_i %>(<%= @item.price %>)円</th>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <th>
        <% if @item.is_active == true %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      </th>
    </tr>
  </table>

  <div class="actions">
    <%= link_to '編集する', edit_admin_item_path(@item) %>
  </div>
</div>