<h2>注文履歴詳細</h2>

<div>
  <table>
    <tr>
      <th>購入者</th>
      <td>
        <%= @order_detail.order.customer.last_name %>
        <%= @order_detail.order.customer.first_name %>
      </td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= @order_detail.created_at.strftime("%Y/%m/%d") %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        <%= "〒"+@order_detail.order.postal_code %>
        <%= @order_detail.order.address %><br>
        <%= @order_detail.order.name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order_detail.order.pay_type_i18n %></td>
    </tr>
  </table>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order
        <td><%= .item.name %></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><%= %></td>
    </tbody>
  </table>
</div>