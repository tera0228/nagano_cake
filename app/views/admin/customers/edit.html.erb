<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |customer| %>
  <div>
    <label>会員ID</label>
    <%= @customer.id %>
  </div>

  <div>
    <label>氏名</label>
    <%= customer.text_field :last_name %> <%= customer.text_field :first_name %>
  </div>

  <div>
    <label>フリガナ</label>
    <%= customer.text_field :last_name_kana %> <%= customer.text_field :first_name_kana %>
  </div>

  <div>
    <label>郵便番号</label>
    <%= customer.text_field :postal_code %>
  </div>

  <div>
    <label>住所</label>
    <%= customer.text_field :address %>
  </div>

  <div>
    <label>電話番号</label>
    <%= customer.text_field :telephone_number %>
  </div>

  <div>
    <label>メールアドレス</label>
    <%= customer.text_field :email %>
  </div>

  <div>
    <label>会員ステータス</label>
    <%= customer.radio_button :is_active, true %>
    <%= customer.label :is_active, "有効" %>
    <%= customer.radio_button :is_active, false %>
    <%= customer.label :is_active, "退会" %>
  </div>

  <div class="actions">
    <%= customer.submit "変更を保存" %>
  </div>
<% end %>