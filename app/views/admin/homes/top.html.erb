<h2>注文履歴一覧</h2>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
        </td>
        <td>
          <%= order.customer.last_name %><%= order.customer.first_name %>
        </td>
        <td>
          <%= order.order_details.amount %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>