<!-- 顧客側商品一覧画面 -->
<div class="container">
  <div class="row">
    <h2 class="mt-5">商品一覧</h2>
  </div>

  <div class="row mt-3">
    <% @items.each do |item| %>
    <div class="col-md-4">
      <div class="card md-3 mt-3">
        <div class="card">
          <div>
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.item_image, class: "item_image" %>
            <% end %>
          </div>
          <div class="card-body text-center">
            <p class="card-title"><%= item.name %></p>
            <p class="card-text">¥<%= item.price %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>