<h2>配送先登録/一覧</h2>

<%= form_with model: @address do |address| %>

<div class="field">
  <label>郵便番号(ハイフンなし)</label>
  <%= address.text_field :postal_code %>
</div>

<div class="field">
    <label>住所</label>
    <%= address.text_field :address %>
</div>

<div class="field">
    <label>宛名</label>
    <%= address.text_field :name %>
</div>

<div class="actions">
    <%= address.submit "新規登録する" %>
</div>

<% end %>

<table>
    <thead>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
    </thead>
    <tbody>
    <% @addresses.each do |address| %>
    <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address.id) %> <%= link_to "削除する", address_path(address.id), method: :delete, data: {confirm: "本当に消しますか？"} %>
        </td>
    </tr>
    <% end %>
    </tbody>
</table>