<!-- カート一覧画面 -->
<div class="container">
  <div class="row mt-5">
    <h3 class="col-md-10">ショッピングカート</h3>

    <div class="col-md-1">
      <%= button_to "カートを空にする", destroy_all_path(@cart_items), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-danger" %>
    </div>
  </div>

  <table class="table table-bordered col-md-12 mt-3">
    <thead>
      <tr class="table-warning">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
              <%= image_tag cart_item.item.item_image, size: "100x80" %>
              <%= cart_item.item.name %>
          </td>
          <td>
            <%= (cart_item.item.price * 1.1).to_i %>
          </td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |cart_item| %>
              <%= cart_item.select :amount, *[1..10], {:class => "form-control"} %>
              <%= cart_item.submit "変更", class: "btn btn-success" %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal %>
              <% @total_price += cart_item.subtotal %>
          </td>
          <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row mt-5">
    <div class="col-md-9">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>

    <div class="col-md-3">
      <table class="table table-bordered">
        <tr>
          <th class="table-warning">合計金額</th>
          <td><%= @total_price %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-12 d-flex justify-content-center">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>

</div>