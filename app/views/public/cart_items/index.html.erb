<!-- カート一覧画面 -->
<h2>ショッピングカート</h2>

<div class="actions">
  <%= button_to "カートを空にする", destroy_all_path(@cart_items), method: :delete, data: {confirm: "本当に消しますか？"} %>
</div>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
            <%= image_tag cart_item.item.item_image, size: "100x80" %>
            <%= cart_item.item.name %>
        </td>
        <td>
          <%= (cart_item.item.price * 1.1).to_i %>
        </td>
        <td>
          <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |cart_item| %>
            <%= cart_item.select :amount, *[1..10] %>
            <%= cart_item.submit "変更" %>
          <% end %>
        </td>
        <td><%= cart_item.subtotal %>
            <% @total_price += cart_item.subtotal %>
        </td>
        <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to "買い物を続ける", root_path %>
</div>

<table>
  <tr>
    <th>合計金額</th>
    <td><%= @total_price %></td>
  </tr>
</table>

<div>
  <%= link_to "情報入力に進む", new_order_path %>
</div>