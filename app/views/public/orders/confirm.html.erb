<h2>注文情報確認</h2>
<div>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
      <tbody>
        <% current_customer.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.item_image, size: "100x80" %>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= (cart_item.item.price * 1.1).to_i %>
            </td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td>
              <%= total_price %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</div>

<div>
  <table>
    <tr>
      <th>送料</th>
      <td></td>
    </tr>
    <tr>
      <th>商品合計</th>
      <td></td>
    </tr>
    <tr>
      <th>請求金額</th>
      <td></td>
    </tr>
  </table>
</div>

