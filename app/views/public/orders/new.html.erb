<h2>注文情報入力</h2>

<%= form_with model: @order do |order| %>
<h3>支払方法</h3><br>
    <div>
        <%= order.radio_button :pay_type, "credit_card" %>
        <%= order.label :pay_type, "クレジットカード" %><br>

        <%= order.radio_button :pay_type, "transfer" %>
        <%= order.label :pay_type, "銀行振込" %><br>
    </div>
<h3>お届け先</h3>
    <div>
        <%= order.radio_button :address, "yourself_address" %>
        <%= order.label :address, "ご自身の住所" %><br>
        <%= @order.name %>
    </div>

    <div>
        <%= order.radio_button :address, "registered_address" %>
        <%= order.label :address, "登録済み住所から選択" %><br>
        <%= order.select :address_id, options_from_collection_for_select(Address.all, :id, :name) %>
    </div>

    <div>
        <%= order.radio_button :address, "new_address" %>
        <%= order.label :address, "新しいお届け先" %><br>
        <label>郵便番号(ハイフンなし)</label>
        <%= order.text_field :postal_code %><br>
        <label>住所</label>
        <%= order.text_field :address %><br>
        <label>宛名</label>
        <%= order.text_field :name %>
    </div>

    <div class="actions">
        <%= order.submit "確認画面へ進む" %>
    </div>
<% end %>