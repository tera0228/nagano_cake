<h2>登録情報編集</h2>

<%= form_with model: @customer do |customer| %>

  <div class="field">
    <label>氏名</label>
    <%= customer.text_field :last_name %> <%= customer.text_field :first_name %>
  </div>

  <div class="field">
    <label>フリガナ</label>
    <%= customer.text_field :last_name_kana %> <%= customer.text_field :first_name_kana %>
  </div>

  <div class="field">
    <label>郵便番号</label>
    <%= customer.text_field :postal_code %>
  </div>

  <div class="field">
    <label>住所</label>
    <%= customer.text_field :address %>
  </div>

  <div class="field">
    <label>電話番号</label>
    <%= customer.text_field :telephone_number %>
  </div>

  <div class="field">
    <label>メールアドレス</label>
    <%= customer.text_field :email %>
  </div>

  <div class="actions">
    <%= customer.submit "編集内容を保存する" %>
  </div>

  <div class="actions">
    <%= link_to "退会する", customers_path %>
  </div>
<% end %>