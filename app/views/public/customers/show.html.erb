<div class="container">

  <div class="row mt-5">
    <h2>マイページ</h2>
  </div>

  <div class="row mt-3">
    <h4 class="font-weight-bold col-sm-3">登録情報</h4>
    <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success" %>
  </div>

  <div class="row mt-4">
    <table class="table table-bordered col-sm-8">
      <tr>
        <th class="table-warning" scope="col">氏名</th>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="table-warning" scope="col">カナ</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="table-warning" scope="col">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="table-warning" scope="col">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="table-warning" scope="col">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="table-warning" scope="col">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>

  <div class="row mt-5">
    <h4 class="font-weight-bold col-sm-3">配送先</h4>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary col-sm-2" %>
  </div>

  <div class="row mt-3">
    <h4 class="font-weight-bold col-sm-3">注文履歴</h4>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary col-sm-2" %>
  </div>

</div>